# Database Configuration
# For local development without Docker, use port 5432
# To connect to Docker database from host, use port 5433
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/currency_app_development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3001

# Exchange Rate API (choose one)
# Get your API key from: https://exchangerate-api.com or https://fixer.io
EXCHANGE_RATE_API_KEY=your_api_key_here
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5
